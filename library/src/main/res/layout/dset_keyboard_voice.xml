<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_voice_root"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#f4f4f4"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c9c9c9" />

    <TextView
        android:id="@+id/rl_switch_system_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/arrow_left"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/dset_chinese_keyboard"
        android:textColor="@color/dset_text_black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/btn_voice"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_selector_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:background="@drawable/dset_keyboard_voice_speech_off_gray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/dset_voice_tips"
            android:textColor="@color/dset_text_black"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>