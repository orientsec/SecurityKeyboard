<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dset_keyboard_bolder_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="15dp"
    app:elevation="8dp">

    <include
        android:id="@+id/voice_layout"
        layout="@layout/dset_keyboard_voice" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dfzq.dset.view.VoiceLayout
            android:id="@+id/voice_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <FrameLayout
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dset_view_bolder"
        android:paddingTop="1dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dset_white"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:text="@string/dset_finish"
            android:textColor="@color/dset_text_black"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </FrameLayout>

</LinearLayout>
